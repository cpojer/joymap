body
    background-color #DFFBFF

.arrows-example
    width 100%
    max-width 1000px
    display flex
    justify-content center
    align-items center
    flex-direction column

    .module
        font-size 2rem
        margin 2rem
        width 100%

        .name
            text-align center
            background #39CCCC
            margin 1rem 0
            padding 1rem 0

        .arrows
            display flex
            flex-wrap wrap

            div
                margin-left 1rem
                margin-bottom 1rem
                padding 0.5rem 1rem
                width 5rem

            .L
                background-color #AAAABB
            .R
                background-color #CCCCAA
