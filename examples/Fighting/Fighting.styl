body
    background-color #DFFBFF

.fighting-example
    width 100%
    max-width 1000px
    display flex
    justify-content center
    align-items center
    flex-direction column

    .module
        font-size 2rem
        margin 2rem
        width 100%

        .name
            text-align center
            background #39CCCC
            margin 1rem 0
            padding 1rem 0

        .inputs
            display flex
            flex-wrap wrap

            div
                margin-left 1rem
                margin-bottom 1rem
                padding 0.5rem 1rem
                width 5rem
                text-align center

            .L
                background-color #AAAABB
            .R
                background-color #CCCCAA
            .D
                background-color #BBAACC
            .L3
                background-color #AAAA55
            .L2
                background-color #BBDDFF
            .L1
                background-color #BBDDFF
            .R3
                background-color #AAAA55
            .R2
                background-color #BBEE99
            .R1
                background-color #BBEE99
            .A
                background-color #FFBBAA
            .B
                background-color #FFBBAA
            .X
                background-color #FFBBAA
            .Y
                background-color #FFBBAA
